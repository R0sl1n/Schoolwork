@model BloggersUnite.Models.Comment

<h2>Edit Comment</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" /> <!-- Comment ID -->
    <input type="hidden" asp-for="PostId" /> <!-- Post ID -->
    <input type="hidden" asp-for="OwnerId" /> <!-- Owner ID -->

    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div>
        <label>Owner: @ViewBag.OwnerEmail</label> <!-- E-post til eier av kommentaren -->
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}